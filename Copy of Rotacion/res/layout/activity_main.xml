<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="elliot.rotacion.Rotacion" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/btnEjes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="enviarEjes"
        android:text="Mostrar ejes"
        />

    <TextView
        android:id="@+id/txtEjeX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="sredtfygui" />

    <TextView
        android:id="@+id/txtEjeY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtEjeX"
        android:layout_below="@+id/txtEjeX"
        android:layout_marginTop="18dp"
        android:text="rxtcvb" />

    <TextView
        android:id="@+id/txtEjeZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEjeY"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:text="xrtcfyvgbh" />

</RelativeLayout>